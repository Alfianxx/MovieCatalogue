<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfian.moviecatalogue">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_movie_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieCatalogue">
        <activity android:name=".ui.FavoriteFilmActivity"></activity>
        <activity android:name=".ui.DetailFilmActivity" />
        <activity
            android:name=".ui.ListFilmActivity"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>